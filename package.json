{
    "name": "catalite",
    "version": "1.0.0",
    "description": "A throwback to Catalyst v1.x, but more stable.",
    "main": "main/main.js",
    "private": true,
    "scripts": {
        "start": "electron .",
        "dev": "concurrently -k npm:start npm:tailwind",
        "tailwind": "tailwindcss -i ./styles.css -o ./output/tailwind.css --minify --watch",
        "tailwind:once": "tailwindcss -i ./styles.css -o ./output/tailwind.css --minify",
        "package": "electron-forge package",
        "publish": "electron-forge publish",
        "make": "electron-forge make"
    },
    "repository": "https://github.com/jdev082/Catalite",
    "keywords": [
        "Electron",
        "Browser",
        "Internet"
    ],
    "author": "jdev082",
    "license": "MIT",
    "devDependencies": {
        "@electron-forge/cli": "^6.3.0",
        "@electron-forge/maker-deb": "^6.1.1",
        "@electron-forge/maker-dmg": "^6.1.1",
        "@electron-forge/maker-rpm": "^6.1.1",
        "@electron-forge/maker-squirrel": "^6.1.1",
        "@electron-forge/maker-zip": "^6.1.1",
        "@electron-forge/publisher-github": "^6.1.1",
        "concurrently": "^8.2.0",
        "electron": "^25.1.1",
        "electron-reloader": "^1.2.3",
        "tailwindcss": "^3.3.2"
    },
    "dependencies": {
        "cross-fetch": "^3.1.6",
        "electron-squirrel-startup": "^1.0.0"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "icon": "./assets/icon-scaled"
            },
            "publishers": [
                {
                    "name": "@electron-forge/publisher-github",
                    "config": {
                        "repository": {
                            "owner": "JaydenDev",
                            "name": "Catalite"
                        },
                        "draft": true
                    }
                }
            ],
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "catalite"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-dmg",
                    "config": {
                        "format": "ULFO"
                    }
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    }
}
